<h1 class="text-center mb-4"><%= @list.name %></h1>

<h3 class="mb-3">Movies in this list:</h3>

<% if @list.bookmarks.any? %>
  <ul class="list-group">
    <% @list.bookmarks.each do |bookmark| %>
      <li class="list-group-item d-flex justify-content-between align-items-center">
        <span><%= bookmark.movie.title %> â€“ <%= bookmark.comment %></span>

        <%= button_to "Remove", bookmark_path(bookmark),
          method: :delete,
          # data: { turbo: false, confirm: "Are you sure you want to remove this movie from the list?" },
          data: { turbo_confirm: "Are you sure you want to remove this movie from the list?" },
          class: "btn btn-sm btn-outline-danger" %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>No movies in this list yet.</p>
<% end %>


<div class="text-center mt-4">
  <%= link_to "Add a Movie", new_list_bookmark_path(@list), class: "btn btn-primary" %>
  <%= link_to "Back to Lists", lists_path, class: "btn btn-secondary" %>
</div>
