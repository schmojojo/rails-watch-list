<h1 class="text-center mb-4">All Lists</h1>

<div class="container mt-5">
  <div class="text-center mt-5 mb-5">
    <%= link_to "+ Create a New List", new_list_path, class: "btn btn-success" %>
  </div>

  <% if @lists.any? %>
    <div class="row g-4">
      <% @lists.each do |list| %>
        <div class="col-12 col-sm-6 col-md-4 col-lg-3">
          <div class="card list-card h-100 shadow-sm">
            <div class="card-body d-flex flex-column justify-content-between">
              <h5 class="card-title mb-2"><%= link_to list.name, list_path(list), class: "text-decoration-none" %></h5>
              <p class="card-text text-muted"><%= pluralize(list.bookmarks.count, "movie") %> in this list</p>

              <div class="d-flex justify-content-between mt-3">
                <%= link_to "View", list_path(list), class: "btn btn-primary btn-sm" %>
                <%= button_to "Delete", list_path(list),
                      method: :delete,
                      data: { confirm: "Are you sure you want to delete this list?" },
                      class: "btn btn-outline-danger btn-sm" %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <p>No lists created yet.</p>
  <% end %>
</div>

