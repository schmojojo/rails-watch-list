<h1 class="text-center mb-4">New List</h1>

<div class="row justify-content-center">
  <div class="col-md-6">
    <%= simple_form_for(@list) do |f| %>
      <div class="mb-3">
        <%= f.input :name, label: "List Name", input_html: { class: "form-control" } %>
      </div>

      <div class="text-center">
        <%= f.button :submit, "Create List", class: "btn btn-success" %>
      </div>
    <% end %>

    <div class="text-center mt-3">
      <%= link_to "Back to Lists", lists_path, class: "btn btn-secondary" %>
    </div>
  </div>
</div>
