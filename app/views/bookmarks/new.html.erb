<h1 class="text-center mb-4">Add a Movie to "<%= @list.name %>"</h1>

<div class="row justify-content-center">
  <div class="col-md-6">
    <%= simple_form_for [@list, @bookmark] do |f| %>
      <div class="mb-3">
        <%= f.input :movie_id, collection: Movie.all, label: "Select a Movie", include_blank: "Choose a movie", as: :select %>
      </div>

      <div class="mb-3">
        <%= f.input :comment, label: "Comment", input_html: { class: "form-control" } %>
      </div>

      <div class="text-center">
        <%= f.button :submit, "Add Bookmark", class: "btn btn-primary" %>
      </div>
    <% end %>

    <div class="text-center mt-3">
      <%= link_to "Back to List", list_path(@list), class: "btn btn-secondary" %>
    </div>
  </div>
</div>
